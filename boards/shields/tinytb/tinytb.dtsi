#include <input/processors.dtsi>
#include <dt-bindings/zmk/input_transform.h>
#include <dt-bindings/zmk/matrix_transform.h>

/ {
	chosen {
        zmk,kscan = &kscan0;
                zmk,matrix_transform = &tinytb_transform;
	};

tinytb_transform: keymap_transform_tinytb {
    compatible = "zmk,matrix-transform";
    columns = <4>;
    rows = <1>;
    map = <
        RC(0,0) RC(0,1) RC(0,2) RC(0,3)
    >;
};

    kscan0: kscan {
        compatible = "zmk,kscan-gpio-direct";
        label = "KSCAN";
        input-gpios =
            <&gpio0 28 (GPIO_ACTIVE_LOW | GPIO_PULL_UP)>,
            <&gpio0 29 (GPIO_ACTIVE_LOW | GPIO_PULL_UP)>,
            <&gpio1 11 (GPIO_ACTIVE_LOW | GPIO_PULL_UP)>,
            <&gpio1 12 (GPIO_ACTIVE_LOW | GPIO_PULL_UP)>;
    };

    trackball_listener: trackball_listener {
        compatible = "zmk,input-listener";
        status = "disabled";
        input-processors = 
            <&zip_xy_transform INPUT_TRANSFORM_Y_INVERT>;       //Y軸反転
            //<&zip_xy_transform INPUT_TRANSFORM_XY_SWAP>,        //X軸とY軸の入れ替え
            //<&zip_xy_transform INPUT_TRANSFORM_X_INVERT>,       //X軸反転
            //<&zip_temp_layer 5 500>;                            //オートマウスレイヤーの選択
    };


tinytrak_physical_layout: tinytrak_physical_layout {
    compatible = "zmk,physical-layout";
    display-name = "Default";
    /* ここを default_transform → tinytb_transform に変更 */
    transform = <&tinytb_transform>;
    kscan = <&kscan0>;
    keys =
        <&key_physical_attrs 100 100 100   0   0 0 0>,
        <&key_physical_attrs 100 100 200   0   0 0 0>,
        <&key_physical_attrs 100 100 100 100   0 0 0>,
        <&key_physical_attrs 100 100 200 100   0 0 0>;
};

};
