/* boards/shields/tinytb/tinytb.dtsi
 * TinyTB: PMW3610 (SPI0) + 4 direct-wired keys on Seeeduino XIAO BLE
 */

#include <zephyr/dt-bindings/gpio/gpio.h>
#include <zephyr/dt-bindings/pinctrl/nrf-pinctrl.h>

/* -------- root -------- */
 / {
	compatible = "zmk,shield-tinytb";

	chosen { zmk,kscan = &kscan0; };

	aliases {
		kscan = &kscan0;
		trackball = &pmw3610;
	};

	/* 4キーをダイレクト配線で取得 */
	kscan0: kscan {
		compatible = "zmk,kscan-gpio-direct";
		label = "TINyTB Keys";

		/* D0=P0.05, D1=P0.04, D2=P0.11, D3=P1.12 */
		input-gpios = <&gpio0  5 (GPIO_PULL_UP | GPIO_ACTIVE_LOW)>,
			      <&gpio0  4 (GPIO_PULL_UP | GPIO_ACTIVE_LOW)>,
			      <&gpio0 11 (GPIO_PULL_UP | GPIO_ACTIVE_LOW)>,
			      <&gpio1 12 (GPIO_PULL_UP | GPIO_ACTIVE_LOW)>;

		debounce-press-ms = <5>;
		debounce-release-ms = <5>;
	};
};

/* -------- pinctrl (SPI0 pins: SCK=1.13, MOSI=1.15, MISO=1.14) -------- */
&pinctrl {
	/* default (active) state */
	spi0_default: spi0_default {
		group1 {
			psels = <NRF_PSEL(SPIM_SCK,  1, 13)>,
				<NRF_PSEL(SPIM_MOSI, 1, 15)>,
				<NRF_PSEL(SPIM_MISO, 1, 14)>;
		};
	};

	/* sleep (optional) */
	spi0_sleep: spi0_sleep {
		group1 {
			psels = <NRF_PSEL(SPIM_SCK,  1, 13)>,
				<NRF_PSEL(SPIM_MOSI, 1, 15)>,
				<NRF_PSEL(SPIM_MISO, 1, 14)>;
			low-power-enable; /* High-Z */
		};
	};
};

/* -------- SPI0 + PMW3610 -------- */
&spi0 {
	status = "okay";

	/* ★必須：pinctrl を与える */
	pinctrl-0 = <&spi0_default>;
	pinctrl-1 = <&spi0_sleep>;
	pinctrl-names = "default", "sleep";

	/* CS は P0.28（NCS） */
	cs-gpios = <&gpio0 28 GPIO_ACTIVE_LOW>;

	/* Trackball: PMW3610 on CS0, MOT= P0.29 */
	pmw3610: pmw3610@0 {
		compatible = "pixart,pmw3610";   /* ドライバのcompatibleに合わせる */
		reg = <0>;                       /* cs-gpios[0] に対応 */
		spi-max-frequency = <2000000>;
		irq-gpios = <&gpio0 29 GPIO_ACTIVE_LOW>;
	};
};
