#include <input/processors.dtsi>
#include <dt-bindings/zmk/input_transform.h>
#include <dt-bindings/zmk/matrix_transform.h>

#define ROT_0   10
#define ROT_90  11
#define ROT_180 12
#define ROT_270 13

/ {
	chosen {
        zmk,kscan = &kscan0;
        zmk,matrix_transform = &default_transform;
	};

default_transform: keymap_transform_0 {
    compatible = "zmk,matrix-transform";
    columns = <4>;
    rows = <1>;
    map = <
        RC(0,0) RC(0,1) RC(0,2) RC(0,3) RC(0,4) RC(0,5)    >;
};

    kscan0: kscan {
        compatible = "zmk,kscan-gpio-direct";
        label = "KSCAN";
        input-gpios =
            <&gpio0 28 (GPIO_ACTIVE_LOW | GPIO_PULL_UP)>,
            <&gpio0 29 (GPIO_ACTIVE_LOW | GPIO_PULL_UP)>,
            <&gpio1 11 (GPIO_ACTIVE_LOW | GPIO_PULL_UP)>,
            <&gpio1 12 (GPIO_ACTIVE_LOW | GPIO_PULL_UP)>,
            <&gpio1 13 (GPIO_ACTIVE_LOW | GPIO_PULL_UP)>,
            <&gpio1 14 (GPIO_ACTIVE_LOW | GPIO_PULL_UP)>;
    };

    trackball_listener: trackball_listener {
        compatible = "zmk,input-listener";
        status = "disabled";
        input-processors = 
            <&zip_xy_transform INPUT_TRANSFORM_XY_SWAP>;        //X軸とY軸の入れ替え
            //<&zip_xy_transform INPUT_TRANSFORM_Y_INVERT>,       //Y軸反転
            //<&zip_xy_transform INPUT_TRANSFORM_X_INVERT>;       //X軸反転
            //<&zip_temp_layer 5 500>;                            //オートマウスレイヤーの選択
    };
// --- ポインタ用リスナーに基準と上書きを設定 ---
&trackball_listener {
    // 基本（0°）：変換なし
    input-processors = <&zip_xy_transform (0)>;

    rot90 {
        layers = <ROT_90>;
        // XY入替 + X反転（= 90°）
        input-processors = <&zip_xy_transform (INPUT_TRANSFORM_XY_SWAP | INPUT_TRANSFORM_X_INVERT)>;
    };
    rot180 {
        layers = <ROT_180>;
        // 180° = X反転 + Y反転
        input-processors = <&zip_xy_transform (INPUT_TRANSFORM_X_INVERT | INPUT_TRANSFORM_Y_INVERT)>;
    };
    rot270 {
        layers = <ROT_270>;
        // XY入替 + Y反転（= 270°）
        input-processors = <&zip_xy_transform (INPUT_TRANSFORM_XY_SWAP | INPUT_TRANSFORM_Y_INVERT)>;
    };
};

};
