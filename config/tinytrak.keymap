#include <behaviors.dtsi>
#include <dt-bindings/zmk/keys.h>
#include <dt-bindings/zmk/mouse.h>

/ {
    keymap {
        compatible = "zmk,keymap";

        default_layer {
            bindings = <
                /* キー1: タップ時は何もせず、ホールド中にスクロールレイヤーへ */
                &hold_tap 200 0 &none &mo SCROLL

                /* キー2: 右クリック */
                &mkp RCLK

                /* キー3: 左クリック */
                &mkp LCLK

                /* キー4: 中クリック */
                &mkp MCLK
            >;
        };

        scroll_layer {
            bindings = <
                /* キー1: レイヤー離脱（離したら戻る） */
                &trans
                &trans
                &trans
                &trans
            >;
        };
    };
};
